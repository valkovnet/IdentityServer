@model Identity.Membership.Models.SignInModel

@section styles {
    <link href="~/Content/signin.css" rel="stylesheet" />
}

<div class="center-form">
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Sign In</legend>
        
            <div class="form-group">
                <label class="col-md-4 control-label" for="username">Username:</label>            
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.UserName, new { id="username", placeholder="You username or email address", @class="form-control input-md" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.UserName)</span>  
                </div>            
            </div>
        
            <div class="form-group">
                <label class="col-md-4 control-label" for="password">Password:</label>            
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { id="password", placeholder="User password", @class="form-control input-md" })
                    <span class="help-block">@Html.ValidationMessageFor(m => m.Password)</span>  
                </div>            
            </div>        
        
            <div class="form-group">
                <label class="col-md-4 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                    <button id="singlebutton" type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </div>          
        </fieldset>
    }
</div>